# Environment Configuration
# Copy this file to .env and fill in your values

# Database
DB_PATH=data.db

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Crawler Settings
CRAWLER_MAX_CONCURRENT=5
CRAWLER_TIMEOUT=10
CRAWLER_MAX_RETRIES=3
CRAWLER_DELAY=1.0
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
CRAWLER_SKIP_DUPLICATES=true

# Scheduler Settings
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL_MINUTES=60
# SCHEDULER_CRON=0 */6 * * *

# Target URLs (comma-separated)
TARGETS=https://example.com,https://httpbin.org/html

# RSS Feed URLs (comma-separated)
RSS_FEEDS=https://news.ycombinator.com/rss,https://hnrss.org/newest?points=100

# Notification Settings
NOTIFICATIONS_ENABLED=false
NOTIFY_ON_COMPLETE=true
NOTIFY_ON_ERROR=true
ERROR_THRESHOLD=50

# Email Notifications
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Slack Notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Playwright (Dynamic Page Support)
USE_PLAYWRIGHT=false
PLAYWRIGHT_HEADLESS=true

# robots.txt Compliance
RESPECT_ROBOTS=true
ROBOTS_CACHE_EXPIRE=3600

# Trafilatura (Content Extraction)
USE_TRAFILATURA=false
EXTRACT_LINKS=true
EXTRACT_IMAGES=true
